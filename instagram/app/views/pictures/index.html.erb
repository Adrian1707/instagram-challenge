<%= form_for Picture.new, html: {multipart: true} do |f| %>
<%= f.label :name %>
<%= f.text_field :caption %>
<%= f.file_field :image %>
<%= f.submit %>
<% end %>

<% if @pictures.any? %>
  <% @pictures.reverse.each do |picture| %>
    <h2> <%= picture.caption %> </h2>
    <p> <%= image_tag picture.image.url(:medium) %> </p>
    <% end %>
<% else %>
"No pictures yet"
<% end %>
